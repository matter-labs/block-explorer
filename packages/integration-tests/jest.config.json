{
  "moduleFileExtensions": ["js", "json", "ts"],
  "setupFiles": ["<rootDir>/tests/hooks/global.ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".test.ts$",
  "modulePathIgnorePatterns": ["<rootDir>/src/playbook"],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "reporters": ["default"],
  "maxWorkers": 1
}